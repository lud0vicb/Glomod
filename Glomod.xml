<Ui xmlns="http://www.blizzard.com/wow/ui/"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.blizzard.com/wow/ui/
                   ..\..\FrameXML\UI.xsd">
    <Script File="Glomod.lua"/>
    <Script File="gui.lua"/>

    <Frame name="GlomodFrame" hidden="true">
        <Scripts>
            <OnLoad function="GlomodOnload"/>
        </Scripts>
    </Frame>

    <Button name="gloButton" inherits="UIPanelButtonTemplate" parent="MicroButtonAndBagsBar">
        <Size x="30" y="30"/>
        <Scripts>
            <OnLoad function="gloButtonOnload"/>
            <OnClick function="gloButtonClick" />
        </Scripts>
        <Anchors>
            <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOMLEFT" relativeTo="MicroButtonAndBagsBar"/>
        </Anchors>
    </Button>

    <Frame name="optionsFrame" hidden="true" frameStrata="HIGH" frameLevel="5">
        <Size x="256" y="256"/>
        <Anchors>
            <Anchor point="CENTER" relativePoint="CENTER" relativeTo="UIParent">
            </Anchor>
        </Anchors>
        <Scripts>
            <OnLoad function="optionsFrameOnload"/>
        </Scripts>
        <Frames>
            <Button name="$parent_Close" parentKey="close" inherits="UIPanelCloseButton">
                <Scripts>
                    <OnClick function="optionsFrameOnclose"/>
                </Scripts>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="0" y="0"/>
                    </Anchor>
                </Anchors>
            </Button>
        </Frames>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture file="Interface\ContainerFrame\UI-Bag-5x4">
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <FontString font="Fonts\FRIZQT__.TTF" text="Gloptions">
                    <FontHeight val="15"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" relativeTo="$parent" x="120" y="-10" />
                    </Anchors>
                </FontString>
            </Layer>
            <Layer level="ARTWORK">
                <Texture file="Interface\BankFrame\Bank-Background">
                    <Size x="172" y="204"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT">
                            <Offset x="-7" y="-49"/>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="$parent_Portrait" parentKey="portrait" file="Interface\CHARACTERFRAME\TemporaryPortrait-Male-Dwarf">
                    <Size x="38" y="38"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset x="68" y="-5"/>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame> --optionsFrame

    <Frame name="debugFrame" hidden="true" frameStrata="HIGH" frameLevel="5">
        <Size x="384" y="512"/>
        <Anchors>
            <Anchor point="LEFT" relativePoint="LEFT" relativeTo="UIParent">
                <Offset y="-20"/>
            </Anchor>
        </Anchors>
        <Scripts>
            <OnLoad function="debugFrameOnload"/>
        </Scripts>
        <Frames>
            <Button name="$parent_Close" parentKey="close" inherits="UIPanelCloseButton">
                <Scripts>
                    <OnClick function="debugFrameOnclose"/>
                </Scripts>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset x="-30" y="-8"/>
                    </Anchor>
                </Anchors>
            </Button>
        </Frames>
        <Layers>
            <Layer level="BORDER">
                <Texture file="Interface\QUESTFRAME\UI-QUESTLOG-TOPLEFT">
                    <Anchors>
                        <Anchor point="TOPLEFT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture file="Interface\QUESTFRAME\UI-QUESTLOG-TOPRIGHT">
                    <Anchors>
                        <Anchor point="TOPRIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture file="Interface\QUESTFRAME\UI-QUESTLOG-BOTLEFT">
                    <Anchors>
                        <Anchor point="BOTTOMLEFT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture file="Interface\QUESTFRAME\UI-QUESTLOG-BOTRIGHT">
                    <Anchors>
                        <Anchor point="BOTTOMRIGHT"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BACKGROUND">
                <Texture name="$parent_Portrait" parentKey="portrait" file="Interface\Icons\INV_Misc_EngGizmos_30">
                    <Size x="60" y="60"/>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset x="7" y="-6"/>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
        </Layers>
    </Frame> --debugFrame
</Ui>
